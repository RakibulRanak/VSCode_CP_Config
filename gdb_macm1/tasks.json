{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Ranaks g++ build active file",
            //"command": "/usr/bin/g++",
            "command": "/opt/homebrew/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++17",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            // "detail": "compiler: /usr/bin/g++ --std=gnu++17",
            "detail": "compiler: /opt/homebrew/bin/g++ --std=gnu++17"
        }
    ]
}